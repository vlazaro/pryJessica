	Connection conn = null;

	public OperacionesService(Connection conn) {
		super();
		this.conn = conn;
	}

	public void insertarOperacion(Operacion operacion) {

		
	}

	public void modificarOperaciones(Operacion operaciones) throws SQLException {
		
