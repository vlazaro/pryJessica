<?xml version="1.0" encoding="UTF-8"?>

<!-- This file defines a JBoss data source for the application
   - The name have to be like 'xxxx-ds.xml'.
   - You should place this file in <JBOSS_HOME>/server/default/deploy
   - Look that 'default' is the Jboss configuration you are using.
   - Remember that you have to copy the MySQL driver to <JBOSS_HOME>/server/default/lib
   -->
<datasources>
	<local-tx-datasource>
		<jndi-name>autentiaDataSource</jndi-name>
		<connection-url>jdbc:mysql://localhost:3306/AUTENTIA</connection-url>
		<driver-class>com.mysql.jdbc.Driver</driver-class>
		<user-name>autentia</user-name>
		<password>autentia</password>
	</local-tx-datasource>
</datasources>
